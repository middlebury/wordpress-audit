# This file is a "template" of what your parameters.yml file should look like
# Set parameters here that may be different on each deployment target of the app, e.g. development, staging, production.
# http://symfony.com/doc/current/best_practices/configuration.html#infrastructure-related-configuration
parameters:
    database_host:     127.0.0.1
    database_port:     ~
    database_name:     wordpress-audit
    database_user:     root
    database_password: ~
    # You should uncomment this if you want use pdo_sqlite
    # database_path: "%kernel.root_dir%/data.db3"

    mailer_transport:  smtp
    mailer_host:       127.0.0.1
    mailer_user:       ~
    mailer_password:   ~

    # Edit the list below to include your WordPress database information.
    # The composer script doesn't seem to like nested parameters, so you'll need to edit parameters.yml after running "composer install" and update the values there.
    wordpresses:
      sub.first-domain.com:
        database_host:      127.0.0.1
        database_port:      ~
        database_name:      wordpress
        database_user:      root
        database_password:  ~
        install_path:       /var/www/html/wordpress/
        plugins_path:       wp-content/plugins/
        themes_path:        wp-content/themes/
        branches:
          - 'origin/plugins'
          - 'origin/master'
      sub.second-domain.com:
        database_host:      127.0.0.1
        database_port:      ~
        database_name:      wordpress
        database_user:      root
        database_password:  ~
        install_path:       /var/www/html/wordpress/
        plugins_path:       wp-content/plugins/
        themes_path:        wp-content/themes/
        branches:
          - 'origin/plugins'
          - 'origin/master'

    # A secret key that's used to generate certain security-related tokens
    secret:            ThisTokenIsNotSoSecretChangeIt
